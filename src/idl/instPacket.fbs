
namespace NNExecutor;

/// Instruction OP code definitions
enum OpCode : ubyte {
    Convolution,
    Relu,
    Pooling,
    FullyConnected,
    Softmax
}


union OpInfo {
    Conv,
    Relu,
    Pool,
    FC,
    Softmax
}


table Instruction {
    opcode:OpCode;
    operand:OpInfo;
}


/// Operand info of each instruction (kernel)
table Conv {
    kernel_name:string;     // only for DEBUG
    kernel_size:int;
    stride_size:int;
    pad_size:int;
}

table Relu {
    kernel_name: string;     // only for DEBUG
}

table Pooling {
    kernel_name:string;     // only for DEBUG
    kernel_size:int;
    stride_size:int;
    pad_size:int;
}

table FC {
    kernel_name:string;     // only for DEBUG
}

table Softmax {
    kernel_name:string;     // only for DEBUG
    op_unit_size:int;
}
 


/// root table definition
table InstPacket {
    packet:[Instruction];
}

root_type InstPacket;
